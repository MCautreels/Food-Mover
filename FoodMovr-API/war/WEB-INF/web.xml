<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
	
	<servlet>
		<servlet-name>Listing</servlet-name>
		<servlet-class>org.rhok.foodmover.api.ListingServlet</servlet-class>
		<init-param>
      		<param-name>default_distance</param-name>
      		<param-value>5</param-value>
        </init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>Listing</servlet-name>
		<url-pattern>/api/v1/listings</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>IsProducer</servlet-name>
		<servlet-class>org.rhok.foodmover.api.IsProducerServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>IsProducer</servlet-name>
		<url-pattern>/api/v1/isProducer</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>IsConsumer</servlet-name>
		<servlet-class>org.rhok.foodmover.api.IsConsumerServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>IsConsumer</servlet-name>
		<url-pattern>/api/v1/isConsumer</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>Notification</servlet-name>
		<servlet-class>org.rhok.foodmover.api.NotificationServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Notification</servlet-name>
		<url-pattern>/api/v1/notification</url-pattern>
	</servlet-mapping>
	
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
</web-app>
